<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/mirror_custom_info"

>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:orientation="vertical" 
            android:layout_marginLeft="5dp" 
  android:layout_marginTop="25dp"

        >
    
    <TextView
        android:id="@+id/getName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
          android:layout_marginLeft="25dp"
            android:text="You are here" 
            android:textSize="20sp"
         />

    <TextView
        android:id="@+id/getAddress"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
            android:layout_marginLeft="25dp"
                    android:text="You are here" 
            android:textSize="20sp" 
        android:layout_weight="1"/>

    <RatingBar
        android:id="@+id/getClean"
        style="@style/toiletRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:isIndicator="true"
         android:layout_marginLeft="30dp" 
        android:numStars="5" />
</LinearLayout>
    
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="0.5"
    android:orientation="horizontal"
        android:layout_marginLeft="40dp" 
        android:layout_marginBottom="50dp"
    >

    <ImageView
        android:id="@+id/handiImage"
        android:layout_width="0dp"
       	android:layout_height="wrap_content"
       	android:layout_weight="1"
        android:src="@drawable/handicapped"
/>
      <ImageView
        android:id="@+id/freeImage"
        android:layout_width="0dp"
       	android:layout_height="wrap_content"
       	android:layout_weight="1"
               android:src="@drawable/money"
            
/>
</LinearLayout>

  



</LinearLayout>